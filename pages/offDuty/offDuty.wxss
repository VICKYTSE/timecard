font-size: medium;
display: flex;
justify-content: center;
}
.th {
width: 100%;
font-weight: 480;
border-top: 1px solid #4e89D7;
}
.td{
font-weight:initial;
width: 40%;
align-items: center; 
}
.color_diff_row:nth-of-type(odd){
   background:#ddebf7;
}
.color_diff_row:nth-of-type(even){
   background:white;
}


/*row*/
.row_back{
  padding:50rpx 0rpx 40rpx 0rpx;
  background-color:  white;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  height: auto;
}
.row{
  margin:0 auto;                /*新增*/
  width: 80%;                   /*新增*/
  justify-content: flex-start;
  flex-direction: row;
  display: flex;
  align-items: center;
  margin-bottom: 0.8rem;
  
}
.row text{
  flex-grow: 1;
  text-align: center;
}
.row input{
  color:#aaa;
  flex-grow: 0;
  border: 1px solid ;
  display: inline-block;
  box-shadow: 0 0 0.15rem #aaa;
  padding: 0.3rem;
  padding-top: 18rpx;
  height: 48rpx;
  width: 360rpx;
  border-radius: 0.2rem;
}
.row button{
  padding: 0 2rem;
  width:100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.row label{
  margin-right: 1.5rem;     
}


