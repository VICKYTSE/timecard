/*table*/
.table_back{
  background-color:white;
}

.table {
margin-left: 36rpx;
border-right: 0;
border-bottom: 0;
width: 90%;
padding: 5rpx;
}
.tr {
width: 100%;
display: flex;
justify-content: space-between;
}
.th, .td {
padding: 5px;
border-bottom: 1px solid #4e89D7;
/*border-right: 1px solid #dadada;*/
